@using Suncor.LessonsLearnedMP.Web.Helpers;
@using Suncor.LessonsLearnedMP.Web.Common;
@using Suncor.LessonsLearnedMP.Framework

@Html.Raw(ViewBag.DOCTYPE)
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8" >
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />

    <title>Lessons Learned: @ViewBag.Title</title>

    @Html.Script(Enumerations.JavaScript.Jquery)
    @Html.Script(Enumerations.JavaScript.JqueryUi)

    <script type="text/javascript">
        var siteRoot = '@Url.Content("~/")';

        //IE6 css graphics fix
        try { document.execCommand('BackgroundImageCache', false, true); } catch (e) { }

        $(function () {
            window.onerror = function (msg, url, num)
            {
                $.ajax(
                {
                    type: "POST",
                    url: '@Url.Content("~/Shared/LogJavascriptError/")',
                    data: { message: msg, url: url, lineNumber: num, browser: navigator.appName, browserVersion: navigator.appVersion }
                });
                return true;
            }
        });    
    </script>
    
    
    <!--[if lt IE 9]>
        <link type="text/css" rel="stylesheet" media="all" href="@Url.Content("~/Content/IE6-8.css?r=" + HtmlHelpers.ProductVersion()))" />
    <![endif]-->

    <script src='@Url.Content("~/Scripts/MicrosoftAjax.js")' type='text/javascript'></script>  
    <script src='@Url.Content("~/Scripts/MicrosoftMvcValidation.js")' type='text/javascript'></script> 

    @*//VS jQuery Docs, used only for design time *@
    @if (false) {
        <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1-vsdoc.js"></script>
    }   

    @Html.Script(Enumerations.JavaScript.JqueryBgiframe)
    @Html.Script(Enumerations.JavaScript.JqueryForm)
    @Html.Script(Enumerations.JavaScript.JqueryLivequery)
    @Html.Script(Enumerations.JavaScript.JqueryValidate)
    @Html.Script(Enumerations.JavaScript.Json2)
    @Html.Script(Enumerations.JavaScript.Date)
    @Html.Script(Enumerations.JavaScript.JqueryDataTables)
    @Html.Script(Enumerations.JavaScript.JqueryContextMenu)
  @*  @Html.Script(Enumerations.JavaScript.Pie)*@
    @Html.Script(Enumerations.JavaScript.LessonsLearnedCommon)
    @Html.Script(Enumerations.JavaScript.JqueryTooltip)

    @Html.Script(Enumerations.Css.DataTables)
    
    @Html.Script(Enumerations.Css.JqueryUi)
    <link type="text/css" rel="stylesheet" media="all" href="@Url.Content("~/Content/themes/dark-theme/jquery-ui-1.8.20.custom.css?r=" + HtmlHelpers.ProductVersion()))" />
    @Html.Script(Enumerations.Css.JqueryUiInverse)
    @Html.Script(Enumerations.Css.JqueryTooltip)
    @Html.Script(Enumerations.Css.Site)

</head>

<body>
    @RenderBody()
</body>
</html>
